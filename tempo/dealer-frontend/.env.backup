# Auth Endpoints via Gateway (Mapped to User Service /api/users/auth/**)
REACT_APP_AUTH_BASE_URL=http://localhost:8080/api/users/auth

# User Management Endpoints via Gateway (Dealer, Technician, etc.)
REACT_APP_USER_BASE_URL=http://localhost:8080/api/users

# Posts Service (via Gateway)
REACT_APP_POSTS_BASE_URL=http://localhost:8080/api/v1/posts

# Dealer Service (via Gateway)
REACT_APP_DEALER_BASE_URL=http://localhost:8080/api/v1/dealer

# Technician Service (via Gateway)
REACT_APP_TECHNICIAN_BASE_URL=http://localhost:8080/api/v1/technician

