# Production Environment Variables for AutoInspect Frontend
# Copy this to .env.production and set the values in Render

# Main API Base URL (Primary entry point for all API calls)
REACT_APP_API_BASE=https://api-gateway.onrender.com

# API Gateway (Primary entry point)
REACT_APP_API_GATEWAY_URL=https://api-gateway.onrender.com

# Individual Service URLs (if needed for direct access)
REACT_APP_DEALER_BASE_URL=https://dealer-service.onrender.com/api/dealers
REACT_APP_TECHNICIAN_BASE_URL=https://technician-service.onrender.com/api/technicians
REACT_APP_POSTS_BASE_URL=https://postings-service.onrender.com/api/v1
REACT_APP_TECH_DASHBOARD_BASE_URL=https://tech-dashboard-service.onrender.com/api/v1

# Admin and User endpoints through Gateway
REACT_APP_ADMIN_BASE_URL=https://api-gateway.onrender.com/api/admin
REACT_APP_USER_BASE_URL=https://api-gateway.onrender.com/api/users
REACT_APP_AUTH_BASE_URL=https://api-gateway.onrender.com/api/users/auth

# WebSocket and Chat
REACT_APP_WEBSOCKET_BASE_URL=https://chat-service.onrender.com
REACT_APP_CHAT_BASE_URL=https://chat-service.onrender.com

# Feature Flags
REACT_APP_ENABLE_WEBSOCKET=true
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_CALLS=true
REACT_APP_ENABLE_ANALYTICS=false

# Security
REACT_APP_SECURITY_DISABLED=false
REACT_APP_JWT_STORAGE_KEY=allstate_access_token
REACT_APP_REFRESH_TOKEN_KEY=allstate_refresh_token
REACT_APP_USER_INFO_KEY=allstate_user_info
